@model WebDienMay.Models.TaiKhoan

@{
    ViewBag.Title = "Đăng Kí";
}
<link href="~/Content/style/style.css" rel="stylesheet" />
<link href="~/Content/bootstrap/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        @using (Html.BeginForm("DangKi", "Login", FormMethod.Post, new { onsubmit = "return validateForm();" }))
        {
            @Html.AntiForgeryToken()
            <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 10px;">
                <div class="card-header text-center bg-primary text-white" style="border-radius: 5px;">
                    <h3>Đăng Ký Tài Khoản</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="HoTen" class="font-weight-bold">Họ tên:</label>
                        @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", placeholder = "Hãy nhập họ tên" })
                        <small class="text-danger">@Html.ValidationMessageFor(m => m.HoTen)</small>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="font-weight-bold">Email:</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Hãy nhập email" })
                        <small class="text-danger">@Html.ValidationMessageFor(m => m.Email)</small>
                    </div>
                    <div class="form-group">
                        <label for="SoDienThoai" class="font-weight-bold">Số điện thoại:</label>
                        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Hãy nhập số điện thoại" })
                        <small class="text-danger">@Html.ValidationMessageFor(m => m.SoDienThoai)</small>
                    </div>
                    <div class="form-group">
                        <label for="MatKhau" class="font-weight-bold">Mật khẩu:</label>
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Hãy nhập mật khẩu", id = "MatKhau" })
                        <small class="text-danger">@Html.ValidationMessageFor(m => m.MatKhau)</small>
                    </div>
                    <div class="form-group">
                        <label for="repassword" class="font-weight-bold">Xác nhận mật khẩu:</label>
                        <input id="repassword" type="password" class="form-control" placeholder="Hãy xác nhận mật khẩu" />
                        <small class="text-danger error_text"></small>
                    </div>
                    <div class="form-group">
                        <label for="DiaChi" class="font-weight-bold">Địa chỉ:</label>
                        @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Hãy nhập địa chỉ" })
                        <small class="text-danger">@Html.ValidationMessageFor(m => m.DiaChi)</small>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Đăng Ký</button>
                    <div class="text-center mt-3">
                        <p>Nếu bạn đã có tài khoản, hãy <a href="~/Login/DangNhap" class="text-primary font-weight-bold">Đăng Nhập</a></p>
                    </div>
                </div>
            </div>
        }
    </div>

    <script>
        function validateForm() {
            var password = document.getElementById('MatKhau').value.trim(); // Sử dụng trim để xóa khoảng trắng
            var repassword = document.getElementById('repassword').value.trim();
            var errorText = document.querySelector('.error_text');

            // Reset error text
            errorText.innerHTML = '';

            // Check if passwords match
            console.log("Mật khẩu:", password);
            console.log("Xác nhận mật khẩu:", repassword);

            if (password !== repassword) {
                errorText.innerHTML = 'Mật khẩu không khớp.';
                return false; // Prevent form submission
            }

            return true; // Allow form submission
        }
    </script>

</body>
</html>