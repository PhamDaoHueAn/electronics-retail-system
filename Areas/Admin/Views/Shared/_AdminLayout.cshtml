<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Focus - Bootstrap Admin Dashboard </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Areas/Admin/AdminContent/images/favicon.png">
    <link rel="stylesheet" href="~/Areas/Admin/AdminContent/vendor/owl-carousel/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/AdminContent/vendor/owl-carousel/css/owl.theme.default.min.css">
    <link href="~/Areas/Admin/AdminContent/vendor/jqvmap/css/jqvmap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/AdminContent/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        table tbody td, th {
            color: #383838;
        }

        .form-group label {
            color: #383838;
        }

        #successMessage, #errorMessage {
            position: fixed;
            top: 50px;
            left: 20px;
            z-index: 50000;
            max-width: 500px;
        }
    </style>

</head>


<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header">
            <a href="/Admin/AdminProduct" class="brand-logo">
                <img class="logo-abbr" src="~/Areas/Admin/AdminContent/images/logo.png" alt="">
                <img class="logo-compact" src="~/Areas/Admin/AdminContent/images/logo-text.png" alt="">
                <img class="brand-title" src="~/Areas/Admin/AdminContent/images/logo-text.png" alt="">
            </a>

            <div class="nav-control">
                <div class="hamburger">
                    <span class="line"></span><span class="line"></span><span class="line"></span>
                </div>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->
        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">
            <div class="header-content">
                <nav class="navbar navbar-expand">
                    <div class="collapse navbar-collapse justify-content-between">
                        <div class="header-left">
                            <div class="search_bar dropdown">
                                <span class="search_icon p-3 c-pointer" data-toggle="dropdown">
                                    <i class="mdi mdi-magnify"></i>
                                </span>
                                <div class="dropdown-menu p-0 m-0">
                                    <form>
                                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                                    </form>
                                </div>
                            </div>
                        </div>

                        <ul class="navbar-nav header-right">
                            <li class="nav-item dropdown notification_dropdown">
                                @if (Session["UserEmail"] != null) // Kiểm tra xem người dùng đã đăng nhập chưa
                                {
                                    

                                    
                                    <a style="color:red; font-size:15px" href="/Login/DangXuat" class="nav-item nav-link">Đăng xuất</a>
                                }
                                else
                                {
                                    
                                    <a href="/Login/DangNhap" class="my-auto">
                                        <i class="fas fa-user fa-2x text-info"></i>
                                    </a>
                                }
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->
        <!--**********************************
            Sidebar start
        ***********************************-->
        @if (TempData["SuccessMessage"] != null)
        {
            <div id="successMessage" class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div id="errorMessage" class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="quixnav">
            <div class="quixnav-scroll">
                <ul class="metismenu" id="menu">
                    <li style="font-size:20px" class="nav-label first">Quản lý</li>

                    <li>
                        <a href="/Admin/AdminTaiKhoan" aria-expanded="false">
                            <span class="nav-text">Quản lý tài khoản</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/AdminProduct" aria-expanded="false">
                            <span class="nav-text">Quản lý sản phẩm</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/AdminDanhMuc" aria-expanded="false">
                            <span class="nav-text">Quản lý danh mục</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/AdminThuongHieu" aria-expanded="false">
                            <span class="nav-text">Quản lý thương hiệu</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/AdminDonHang" aria-expanded="false">
                            <span class="nav-text">Quản lý đơn hàng</span>
                        </a>
                    </li>

                </ul>
            </div>


        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->
        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    @RenderBody()
                </div>

            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        <!--**********************************
            Footer start
        ***********************************-->
        <div class="footer">
            <div class="copyright">
                <p>Copyright © Designed &amp; Developed by <a href="#" target="_blank">Quixkit</a> 2019</p>
                <p>Distributed by <a href="https://themewagon.com/" target="_blank">Themewagon</a></p>
            </div>
        </div>
        <!--**********************************
            Footer end
        ***********************************-->
        <!--**********************************
           Support ticket button start
        ***********************************-->
        <!--**********************************
           Support ticket button end
        ***********************************-->


    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->
    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/Areas/Admin/AdminContent/vendor/global/global.min.js"></script>
    <script src="~/Areas/Admin/AdminContent/js/quixnav-init.js"></script>
    <script src="~/Areas/Admin/AdminContent/js/custom.min.js"></script>


    <!-- Vectormap -->
    <script src="~/Areas/Admin/AdminContent/vendor/raphael/raphael.min.js"></script>
    <script src="~/Areas/Admin/AdminContent/vendor/morris/morris.min.js"></script>


    <script src="~/Areas/Admin/AdminContent/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Areas/Admin/AdminContent/vendor/chart.js/Chart.bundle.min.js"></script>

    <script src="~/Areas/Admin/AdminContent/vendor/gaugeJS/dist/gauge.min.js"></script>

    <!--  flot-chart js -->
    <script src="~/Areas/Admin/AdminContent/vendor/flot/jquery.flot.js"></script>
    <script src="~/Areas/Admin/AdminContent/vendor/flot/jquery.flot.resize.js"></script>

    <!-- Owl Carousel -->
    <script src="~/Areas/Admin/AdminContent/vendor/owl-carousel/js/owl.carousel.min.js"></script>

    <!-- Counter Up -->
    <script src="~/Areas/Admin/AdminContent/vendor/jqvmap/js/jquery.vmap.min.js"></script>
    <script src="~/Areas/Admin/AdminContent/vendor/jqvmap/js/jquery.vmap.usa.js"></script>
    <script src="~/Areas/Admin/AdminContent/vendor/jquery.counterup/jquery.counterup.min.js"></script>


    <script src="~/Areas/Admin/AdminContent/js/dashboard/dashboard-1.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        setTimeout(function () {
            var messageBox = document.getElementById("successMessage");
            if (messageBox) {
                messageBox.style.display = "none";
            }
        }, 3000);
        setTimeout(function () {
            var messageBox = document.getElementById("errorMessage");
            if (messageBox) {
                messageBox.style.display = "none";
            }
        }, 3000);
        document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname;

            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(function (link) {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
        });

    </script>
</body>

</html>