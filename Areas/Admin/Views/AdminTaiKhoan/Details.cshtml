@model WebDienMay.Models.TaiKhoan

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Chi tiết tài khoản</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-responsive-sm">

                    <tbody>
                        <tr>
                            <th>Mã tài khoản</th>
                            <td>@Model.TaiKhoanID</td>
                        </tr>
                        <tr>
                            <th>Họ tên</th>
                            <td>@Model.HoTen</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <td>@Model.SoDienThoai</td>
                        </tr>
                        <tr>
                            <th>Địa chỉ</th>
                            <td>@Model.DiaChi</td>
                        </tr>
                        <tr>
                            <th>Vai trò</th>
                            <td>@Model.VaiTro</td>
                        </tr>
                        <tr>
                            <th>Ngày tạo</th>
                            <td>@Model.NgayTao</td>
                        </tr>
                        

                    </tbody>
                </table>
                <a href="/Admin/AdminTaiKhoan/Edit?id=@Model.TaiKhoanID" class="btn btn-warning btn sweet-confirm">Chỉnh sửa</a>
                <a href="/Admin/AdminTaiKhoan/Index" class="btn btn-secondary text-white">Quay lại</a>
            </div>
        </div>

    </div>
    <!-- /# card -->
</div>