@model WebDienMay.Models.DanhMuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "AdminDanhMuc", new { id = Model.DanhMucID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TenDanhMuc, "Họ tên")
        @Html.TextBoxFor(model => model.TenDanhMuc, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
    </div>


    
    <div class="form-group ">
        @Html.CheckBoxFor(model => model.Active, new { @class = "" })
        @Html.LabelFor(model => model.Active, "Hoạt động")
        @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
    </div>


    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")}