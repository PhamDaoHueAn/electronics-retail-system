@model WebDienMay.Models.DanhMuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create", "AdminDanhMuc", new { }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TenDanhMuc, "Tên danh mục")
        @Html.TextBoxFor(model => model.TenDanhMuc, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Thêm danh mục</button>
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}