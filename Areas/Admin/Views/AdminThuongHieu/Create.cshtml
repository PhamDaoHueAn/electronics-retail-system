@model WebDienMay.Models.ThuongHieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create", "AdminThuongHieu", new { }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TenThuongHieu, "Tên thương hiệu")
        @Html.TextBoxFor(model => model.TenThuongHieu, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TenThuongHieu, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Thêm danh mục</button>
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")}
