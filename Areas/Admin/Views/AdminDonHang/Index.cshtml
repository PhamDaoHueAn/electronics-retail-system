@model IEnumerable<WebDienMay.Models.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>
        </div>
        <div class="card-body">
            <form action="/Admin/AdminDonHang/Search" method="post">
                <input type="search" name="sdt" class="form-control mb-2" style="width:150px" placeholder="Tìm kiếm" />
            </form>
            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-primary">
                        <tr>
                            <th scope="col">Mã</th>
                            <th scope="col">Người nhận</th>
                            <th scope="col">Số điện thoại</th>
                            <th scope="col">Ngày đặt</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col"></th>



                            <th scope="col">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.DonHangID</th>
                                <td>@item.HoTenNguoiNhan</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.NgayDat</td>
                                @if(item.TrangThai == "Đã hủy")
                                {
                                <td class="text-danger">@item.TrangThai</td>
                                    
                                }
                                else if (item.TrangThai == "Đã giao hàng")
                                {
                                <td class="text-success">@item.TrangThai</td>
                                    
                                }
                                else
                                {
                                    <td >@item.TrangThai</td>
                                }

                                <td>
                                    <a href="@Url.Action("Details", "AdminDonHang", new { id = item.DonHangID })" class="btn btn-info btn-sm">Xem Chi Tiết</a>

                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
